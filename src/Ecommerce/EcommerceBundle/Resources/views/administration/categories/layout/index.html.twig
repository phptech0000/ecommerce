{% extends 'layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Liste des catégories</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.nom }}</td>
                <td>
                    <a href="{{ path('adminCategories_show', { 'id': category.id }) }}"><i class="icon-book"></i></a>
                    <a href="{{ path('adminCategories_edit', { 'id': category.id }) }}"><i class="icon-edit"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul style="list-style: none">
        <li>
            <a class="btn btn-primary" href="{{ path('adminCategories_new') }}">Nouvelle catégorie</a>
        </li>
    </ul>
{% endblock %}
