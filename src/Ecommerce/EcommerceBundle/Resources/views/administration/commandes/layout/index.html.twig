{% extends 'layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Liste des commandes</h1>

    {% for message in app.flashes('error') %}
        <div class="alert alert-error">
            {{ message }}
        </div>
    {% endfor %}

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <th>Référence</th>
                <th>Client</th>
                <th>Facture</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            {# @var commande \Ecommerce\EcommerceBundle\Entity\Commandes #}
            <tr>
                <td>{{ commande.date | date("m/d/Y à H:i:s")}}</td>
                <td>{{ commande.reference }}</td>
                <td>{{ commande.utilisateur.username}}</td>
                <td>
                <td><a href="{{ path('adminShowFacture', {'id': commande.id}) }}" target="_blank"><i class="icon-download"></i></a></td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

{% endblock %}
