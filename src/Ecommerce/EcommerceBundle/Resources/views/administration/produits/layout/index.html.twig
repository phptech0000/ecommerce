{% extends 'layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Liste des produits</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prix HT</th>
                <th>Disponible</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.prix }} â‚¬</td>
                <td>{% if produit.disponible %}Yes{% else %}No{% endif %}</td>
                <td>
                    <a href="{{ path('adminProduits_show', { 'id': produit.id }) }}"><i class="icon-book"></i></a>
                    <a href="{{ path('adminProduits_edit', { 'id': produit.id }) }}"><i class="icon-edit"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul style="list-style: none">
        <li>
            <a class="btn btn-primary" href="{{ path('adminProduits_new') }}">Nouveau produit</a>
        </li>
    </ul>
{% endblock %}
