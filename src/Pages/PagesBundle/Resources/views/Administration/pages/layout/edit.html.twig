{% extends 'layout/layoutAdmin.html.twig' %}

{% block body %}
    <h2>Page edit</h2>

    <div class="span8">
        {{ form_start(edit_form) }}
        {{ form_errors(edit_form) }}

        <div>
            {{ form_label(edit_form.titre) }}
            <span class="alert-danger">{{ form_errors(edit_form.titre) }}</span>
            {{ form_widget(edit_form.titre) }}
        </div>

        <div>
            {{ form_label(edit_form.contenu) }}
            <span class="alert-danger">{{ form_errors(edit_form.contenu) }}</span>
            {{ form_widget(edit_form.contenu) }}
        </div>

        <div>
            <input class="btn btn-primary" type="submit" value="Edit" />
        </div>

        {{ form_end(edit_form) }}
    </div>

    <div class="span2">
        <ul class="record_actions" style="list-style: none">
            <li>
                <a class="btn btn-default" href="{{ path('adminPages_index') }}">Retour</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
{% endblock %}
