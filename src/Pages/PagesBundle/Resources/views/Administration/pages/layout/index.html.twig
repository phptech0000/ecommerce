{% extends 'layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Pages list</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td>{{ page.titre }}</td>
                <td>
                    <a href="{{ path('adminPages_show', { 'id': page.id }) }}"><i class="icon-book"></i></a>
                    <a href="{{ path('adminPages_edit', { 'id': page.id }) }}"><i class="icon-edit"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul style="list-style: none">
        <li>
            <a class="btn btn-default" href="{{ path('adminPages_new') }}">Nouvelle page</a>
        </li>
    </ul>
{% endblock %}
