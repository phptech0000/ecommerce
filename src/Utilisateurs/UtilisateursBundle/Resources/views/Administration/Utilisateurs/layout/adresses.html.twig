{% extends 'layout/layoutAdmin.html.twig' %}

{% block body %}
    {# @var utilisateur \Utilisateurs\UtilisateursBundle\Entity\Utilisateurs #}
    <h1>Liste des adresses de {{ utilisateur.username }}</h1>

    {% for adresse in utilisateur.adresses %}
        {# @var adresse \Ecommerce\EcommerceBundle\Entity\UtilisateursAdresses #}

        <div class="span12">
            <div class="span4">
                <h4>Adresse {{ loop.index }}:</h4>
                {{ adresse.prenom }} {{ adresse.nom }}
                <br />
                {{ adresse.adresse }}, {{ adresse.cp }} {{ adresse.ville }} - {{ adresse.pays }}
                <br /><br />
            </div>
        </div>

    {% endfor %}

{% endblock %}
